<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:orientation="vertical"
    android:background="#FFFBFB"
    android:gravity="center">

    <TextView
        android:gravity="center"
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textAllCaps="false"
        android:text="@string/question"
        android:inputType="textEmailAddress"
        android:layout_gravity="center"
        android:layout_marginTop="46dp"
        android:drawablePadding="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        ></TextView>

    <TextView
        android:gravity="center"
        android:id="@+id/choix1"
        android:layout_width="275dp"
        android:layout_height="51dp"
        android:textAllCaps="false"
        android:text="Choix 1"
        android:inputType="textEmailAddress"
        android:layout_gravity="center"
        android:layout_marginTop="46dp"
        android:drawablePadding="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:drawableStart="@drawable/choix1"
        android:background="@drawable/round_edit_text"
        ></TextView>
    <TextView
        android:gravity="center"
        android:id="@+id/choix2"
        android:layout_width="275dp"
        android:layout_height="51dp"
        android:textAllCaps="false"
        android:text="Choix 2"
        android:inputType="textEmailAddress"
        android:layout_gravity="center"
        android:layout_marginTop="46dp"
        android:drawablePadding="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:drawableStart="@drawable/choix2"
        android:background="@drawable/round_edit_text"
        ></TextView><TextView
    android:gravity="center"
    android:id="@+id/choix3"
    android:layout_width="275dp"
    android:layout_height="51dp"
    android:textAllCaps="false"
    android:text="Choix 3"
    android:inputType="textEmailAddress"
    android:layout_gravity="center"
    android:layout_marginTop="46dp"
    android:drawablePadding="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:drawableStart="@drawable/choix3"
    android:background="@drawable/round_edit_text"
    ></TextView>
    <TextView
        android:gravity="center"
        android:id="@+id/choix4"
        android:layout_width="275dp"
        android:layout_height="51dp"
        android:textAllCaps="false"
        android:text="Choix 4"
        android:inputType="textEmailAddress"
        android:layout_gravity="center"
        android:layout_marginTop="46dp"
        android:drawablePadding="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:drawableStart="@drawable/choix4"
        android:background="@drawable/round_edit_text"
        ></TextView>
</LinearLayout>