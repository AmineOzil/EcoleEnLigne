<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inscription"
    android:orientation="vertical"
    android:background="@android:color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:text="Inscription"
        android:textColor="@android:color/black"
        android:textSize="31dp"
        android:fontFamily="@font/calibri_bold"
        android:layout_marginTop="30dp"></TextView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/etape2"
        android:layout_marginBottom="70dp"></ImageView>
    <EditText
        android:id="@+id/signup_nom"
        android:layout_width="282dp"
        android:layout_height="39dp"
        android:background="@drawable/round_edit_signup"
        android:layout_gravity="center"
        android:hint="Nom"
        android:paddingLeft="30dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/calibri_regular"
        android:textSize="18dp"
        android:layout_marginBottom="20dp"></EditText>
    <EditText
        android:id="@+id/signup_prenom"
        android:layout_width="282dp"
        android:layout_height="39dp"
        android:background="@drawable/round_edit_signup"
        android:layout_gravity="center"
        android:hint="Prénom"
        android:paddingLeft="30dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/calibri_regular"
        android:textSize="18dp"
        android:layout_marginBottom="20dp"></EditText>
    <EditText
        android:id="@+id/signup_email"
        android:layout_width="282dp"
        android:layout_height="39dp"
        android:background="@drawable/round_edit_signup"
        android:layout_gravity="center"
        android:hint="Email"
        android:paddingLeft="30dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/calibri_regular"
        android:textSize="18dp"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="20dp"></EditText>
    <EditText
        android:id="@+id/signup_mdp"
        android:layout_width="282dp"
        android:layout_height="39dp"
        android:background="@drawable/round_edit_signup"
        android:layout_gravity="center"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:paddingLeft="30dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/calibri_regular"
        android:textSize="18dp"
        android:layout_marginBottom="20dp"></EditText>
    <EditText
        android:id="@+id/signup_confirmmdp"
        android:layout_width="282dp"
        android:layout_height="39dp"
        android:background="@drawable/round_edit_signup"
        android:layout_gravity="center"
        android:hint="Confirmer le mot de passe"
        android:inputType="textPassword"
        android:paddingLeft="30dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/calibri_regular"
        android:textSize="18dp"
        android:layout_marginBottom="20dp"></EditText>
    <Spinner
        android:id="@+id/spinner_niveaux"
        android:layout_width="282dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:background="@drawable/round_edit_signup"
        android:entries="@array/niveaux"
        android:fontFamily="@font/calibri_regular"
        android:hint="Niveau d'études"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:textColor="@android:color/black"
        android:textSize="18dp"
></Spinner>

    <Button
        android:id="@+id/signup_suivant"
        android:layout_width="273dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/suivantbutton"
        android:text="Suivant"
        android:textAllCaps="false"
        android:textColor="@android:color/white"></Button>
</LinearLayout>

