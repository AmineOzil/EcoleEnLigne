<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BienvenueActivity"
    android:background="@drawable/img_comencer1">

    <ImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="342dp"
        android:layout_height="286dp"
        android:layout_gravity="center"
        android:background="@drawable/img_comencer2"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.094"
        tools:ignore="MissingConstraints"></ImageView>

    <ImageView
        android:id="@+id/appCompatImageView2"
        android:layout_width="256dp"
        android:layout_height="216dp"
        android:layout_gravity="center"
        android:background="@drawable/femme_bienvenue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216"
        tools:ignore="MissingConstraints"></ImageView>

    <TextView
        android:id="@+id/appCompatAutoCompleteTextView"
        android:layout_width="163dp"
        android:layout_height="40dp"
        android:text="Bienvenue"
        android:gravity="center"
        android:textColor="@color/commencer"
        android:textSize="27dp"
        android:textStyle="bold"
        android:fontFamily="@font/calibri"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.529"
        tools:ignore="MissingConstraints"></TextView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="238dp"
        android:layout_height="36dp"
        android:textColor="@color/commencer"
        android:text="Avec enovSchool vous auriez le temps pour s'amuser et apprendre ! "
        android:textSize="15dp"
        android:textStyle="normal"
        android:fontFamily="@font/calibri_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63"
        tools:ignore="MissingConstraints"></TextView>

    <ImageView
        android:id="@+id/appCompatImageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/step1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.691"
        tools:ignore="MissingConstraints"></ImageView>


    <Button
        android:id="@+id/bienvenue_commencer"
        android:layout_width="273dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/commencerbutton"
        android:text="Commencer l'aventure"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.875" />
</androidx.constraintlayout.widget.ConstraintLayout>